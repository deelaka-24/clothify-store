         </image>
      </ImageView>
      <TextField fx:id="txtEmail" layoutX="687.0" layoutY="277.0" prefHeight="35.0" prefWidth="351.0" promptText="E-mail">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="txtNewPassword" layoutX="686.0" layoutY="437.0" prefHeight="35.0" prefWidth="351.0" promptText="Password">
